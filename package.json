        "nodemon": "2.0.2",
        "npm-run-all": "4.1.5",
        "parcel-bundler": "^1.12.4",
        "rimraf": "3.0.2",
        "shelljs": "0.8.3",
        "supertest": "4.0.2",
        "ts-jest": "^25.2.1",
        "ts-node": "8.6.2",
        "tslint": "6.0.0",
        "typescript": "3.8.3"
    }
