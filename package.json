{
    "name": "api-calculo-salario",
    "version": "0.0.1",
    "description": "API de cálculo de salário líquido para contrato CLT",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git@github.com:dhsanchesp/api-calculo-salario.git"
    },
    "author": "Daniel Sanches <https://github.com/dhsanchesp>",
    "license": "MIT",
    "keywords": [],
    "scripts": {
        "debug": "tsc --project tsconfig.json && node --inspect dist/src/index.js",
        "local-linux-watch": "nodemon --watch src/ --exec \"npm run local-linux\" -e ts",
        "local-linux": "tsc --project tsconfig.json && export NODE_ENV=DEV && node dist/src/index.js",
        "watch-node": "nodemon dist/src/index.js",
        "watch-ts": "tsc -w --project tsconfig.json",
        "tst": "tsc --project tsconfig.json && export NODE_ENV=TEST && node dist/src/index.js",
        "start": "tsc --project tsconfig.json && node dist/src/index.js",
        "build": "tsc --project tsconfig.json",
        "test": "jest"
    },
    "jestSonar": {
        "reportFile": "test-reporter.xml",
        "indent": 4,
        "sonar56x": true
    },
    "dependencies": {
        "@cloudnative/health": "^2.1.2",
        "@cloudnative/health-connect": "^2.1.0",
        "@types/helmet": "0.0.45",
        "axios": "^0.19.2",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^3.21.3",
        "payload-validator": "^1.0.4",
        "tslib": "^1.11.1",
        "winston": "3.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.3",
        "@types/fs-extra": "^8.1.0",
        "@types/jest": "^25.1.4",
        "@types/node": "^13.9.0",
        "@types/shelljs": "^0.8.6",
        "fs-extra": "^8.1.0",
        "jest": "25.1.0",
        "jest-html-reporters": "^2.1.1",
